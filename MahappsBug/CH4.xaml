<simpleChildWindow:ChildWindow
    x:Class="MahappsBug.CH4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MahappsBug"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:simpleChildWindow="http://metro.mahapps.com/winfx/xaml/simplechildwindow"
    Dialog:DialogParticipation.Register="{Binding}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowMove="True"
    ChildWindowHeight="150"
    ChildWindowWidth="150"
    mc:Ignorable="d">
    <Grid>
        <Button Command="{Binding OpenDialog}" Content="DIALOG" />
    </Grid>
</simpleChildWindow:ChildWindow>
